{% set number=cert_hosts.master | length %}
{
  "CN": "system:kube-controller-manager",
  "hosts": [
    "127.0.0.1",
    {% for ip in cert_hosts.master %}
      {% if number == loop.index %}
        "{{ ip }}"
      {% else %}
        "{{ ip }}",
      {% endif %}
    {% endfor %}
  ],
  "key": {
      "algo": "rsa",
      "size": 2048
  },
  "names": [
    {
      "C": "CN",
      "ST": "Guangdong",
      "L": "Guangzhou",
      "O": "system:kube-controller-manager",
      "OU": "System"
    }
  ]
}
